@model Product;

<!DOCTYPE html>
<html>
<head>
    <title>Menu Page</title>
</head>
<body>
    <div class="background">
        <div class=" menuAlign">
        <h3>Main Dish</h3>
            </div>
    <div class="container">
        <div class="image ">
            <img src="~/FoodPics/ondeh.jpg" />
            <h3>Ondeh Ondeh</h3>
            <h3>$2.00</h3>
            <a class="add-cart cart1" href="#">Add Cart</a>
        </div>
        <div class="image ">
            <img src="~/FoodPics/pulut.jpg" />
            <h3>Pulut Urap</h3>
            <h3>$3.00</h3>
            <a class="add-cart cart2" href="#">Add Cart</a>
        </div>
        <div class="image ">
            <img src="~/FoodPics/nasiPadang.jpg" />
            <h3>Nasi Padang</h3>
            <h3>$7.50</h3>
            <a class="add-cart cart3" href="#">Add Cart</a>
        </div>
        <div class="image ">
            <img src="~/FoodPics/badak.jpg" />
            <h3>Badak Berendam</h3>
            <h3>$3.00</h3>
            <a class="add-cart cart4" href="#">Add Cart</a>
        </div>
        </div>

    </div>
    <script>
        let carts = document.querySelectorAll('.add-cart');

        let products =
            [
                {
                    name: 'Ondeh Ondeh',
                    tag: 'ondeh',
                    price: 2,
                    inCart: 0
                },
                {
                    name: 'Pulut Urap',
                    tag: 'urap',
                    price: 3,
                    inCart: 0
                },
                {
                    name: 'Nasi Padang',
                    tag: 'padang',
                    price: 7.5,
                    inCart: 0
                },
                {
                    name: 'Badak Berendam',
                    tag: 'berendam',
                    price: 3,
                    inCart: 0
                }

            ]


        for (let i = 0; i<carts.length; i++) {
            carts[i].addEventListener('click', () => {
                cartNumbers();
            })
        }

        function onLoadCartNum() {
            let prductNum = localStorage.getItem('cartNumbers');
            if (prductNumbers) {
                document.querySelector('.cart span').textContent = 1;
            }
        }
        function cartNumbers() {
            let prductNumbers = localStorage.getItem('cartNumbers');

            prductNumbers = parseInt(prductNumbers);

            if (prductNumbers) {
                localStorage.setItem('cartNumbers', prductNumbers + 1);
                document.querySelector('.cart span').textContent = prductNumbers +1;
            }
            else {
                localStorage.setItem('cartNumbers', 1);
                document.querySelector('.cart span').textContent = 1;
            }

            
        }

        onLoadCartNum();


    </script>
</body>
</html>