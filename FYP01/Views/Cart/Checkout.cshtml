        .cart-page {
            margin: 80px auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        .cart-info {
            display: flex;
            flex-wrap: wrap;
        }

        th {
            text-align: left;
            padding: 5px;
            color: #fff;
            background: #ff523b;
            font-weight: normal;
        }

        td {
            padding: 10px 5px;
        }

            td input {
                width: 40px;
                height: 30px;
                padding: 5px;
            }

            td a {
                color: #ff523b;
                font-size: 12px;
            }

            td img {
                width: 80px;
                height: 80px;
                margin-right: 10px;
            }

        .total-price {
            display: flex;
            justify-content: flex-end;
        }

            .total-price table {
                border-top: 3px solid #ff523b;
                width: 100%;
                max-width: 400px;
            }

        td:last-child {
            text-align: right;
        }

        th:last-child {
            text-align: right;
        }
        </style>
    </head>

<body>

    <div class="small-container cart-page">

        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>

            <tr>
                <td>
                    <div class="cart-info">
                        <img src="~/FoodPics/badak.jpg">
                        <div>
                            <p>Badak Berendam</p>
                            <small>Price: $3.00</small>
                            <br>
                            <a href="#remove">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1"></td>
                <td>$50.00</td>
            </tr>
            <tr>
                <td>
                    <div class="cart-info">
                        <img src="~/FoodPics/badak.jpg">
                        <div>
                            <p>Badak Berendam</p>
                            <small>Price: $3.00</small>
                            <br>
                            <a href="#remove">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1"></td>
                <td>$50.00</td>
            </tr>
        </table>

        <div class="total-price">
            <table>
                <tr>
                    <td>Subtotal</td>
                    <td>$3.00 </td>
                </tr>
                <tr>
                    <td>Tax</td>
                    <td>$1.00</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td>$4.00</td>
                </tr>


            </table>
            </div>
        </div>
    

    </body>
</html>
