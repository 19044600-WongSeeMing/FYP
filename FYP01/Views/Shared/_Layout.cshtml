    <style>
        body {
            margin: 0;
            font-family: 'Gill Sans MT', Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #F1EB22;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .topnav a {
            justify-content:flex-end;
            color: #f2f2f2;
            padding: 10px 12px;
            text-decoration: none;
            font-size: 17px;

         }

         ul{
             margin: 10px;
             display: flex;
             justify-content: center;
          }
            
         ul li{
                list-style-type: none;
          }
            
         .topnav li a{
             text-decoration: none;
             display: block;
             color: black;
             margin-top: 15px;
            }
         .logo img{
             width: 12%;
          }

        .topnav a:hover {
            color: white;
        }

        .topnav a.active {
             background-color: #04AA6D;
             color: white;
         }

        .hero {
            background-color: white;
            color: #FFFFFF;
            text-align: center;
            font-family: 'Haettenschweiler';
            padding: 200px;
            padding-bottom: 350px;
            background-image: url(/Logo/fb_photo.jpg);
            background-size: cover;
            background-position: center;
        }

        .button {
            background-color: #F0C415;
            border: none;
            color: white;
            padding: 22px 35px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 24px;
            cursor: pointer;
        }

        .bottomnav {
            overflow: hidden;
            background-color: #000000;
            color: white;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

    

    </style>
</head>
