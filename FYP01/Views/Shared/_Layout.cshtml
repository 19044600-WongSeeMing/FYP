<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    
    <!-- style sheets references -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("ScriptSection", false)

    <style>
        body {
            margin: 0;
            font-family: 'Gill Sans MT', Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #F1EB22;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .topnav a {
            justify-content:flex-end;
            color: #f2f2f2;
            padding: 10px 12px;
            text-decoration: none;
            font-size: 17px;

         }

         ul{
             margin: 10px;
             display: flex;
             justify-content: center;
          }
            
         ul li{
                list-style-type: none;
          }
            
         .topnav li a{
             text-decoration: none;
             display: block;
             color: black;
             margin-top: 15px;
            }
         .logo img{
             width: 12%;
          }

        .topnav a:hover {
            color: white;
        }

        .topnav a.active {
             background-color: #04AA6D;
             color: white;
         }

        .hero {
            background-color: white;
            color: #FFFFFF;
            text-align: center;
            font-family: 'Haettenschweiler';
            padding: 200px;
            padding-bottom: 350px;
            background-image: url(/Logo/fb_photo.jpg);
            background-size: cover;
            background-position: center;
        }

        .button {
            background-color: #F0C415;
            border: none;
            color: white;
            padding: 22px 35px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 24px;
            cursor: pointer;
        }

        .footer {
            overflow: hidden;
            background-color: #000000;
            color: white;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

    

    </style>
</head>
<body>
    <div class="topnav">
        <div class="logo">
            <img src="~/Logo/With Slogan 2/mesah_delicacies_logo-12.png" alt="logo" />
        </div>
        <ul>
            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a></li>
            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Menu">MENU</a></li>
            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="About">ABOUT</a></li>
            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Testi">TESTIMONIALS</a></li>
            <li class="nav-item"> <a class="nav-link" asp-controller="Account" asp-action="Login">LOGIN</a></li>
            <li class="nav-item"> <a class="nav-link" asp-controller="Cart" asp-action="ShopCart"><img src="~/Logo/shoppingcart.png" width="24" /></a></li>
        </ul>

    </div>

        <div class="row">
            <div class="col-12">
                @RenderBody()

            </div>

        </div>


</body>
</html>
