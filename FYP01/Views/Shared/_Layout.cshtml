<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    
    <!-- style sheets references -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("ScriptSection", false)

<style>
    body {
        margin: 0;
        font-family: 'Gill Sans MT', Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #F1EB22;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

        .topnav a {
            justify-content: flex-end;
            color: #f2f2f2;
            padding: 10px 12px;
            text-decoration: none;
            font-size: 17px;
        }

    ul {
        margin: 10px;
        display: flex;
        justify-content: center;
    }

        ul li {
            list-style-type: none;
        }

    .topnav li a {
        text-decoration: none;
        display: block;
        color: black;
        margin-top: 15px;
    }

    .logo img {
        width: 12%;
    }

    .topnav a:hover {
        color: white;
    }

    .topnav a.active {
        background-color: #04AA6D;
        color: white;
    }

    .hero {
        background-color: white;
        color: #FFFFFF;
        text-align: center;
        font-family: 'Haettenschweiler';
        padding: 200px;
        padding-bottom: 350px;
        background-image: url(/Logo/fb_photo.jpg);
        background-size: cover;
        background-position: center;
    }

    .button {
        background-color: #F0C415;
        border: none;
        color: white;
        padding: 22px 35px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 24px;
        cursor: pointer;
    }

    .footer {
        overflow: hidden;
        background-color: #000000;
        color: white;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .container{
        display: flex;
        font-family: 'Haettenschweiler';
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 50px;
        padding-bottom: 350px;
    }

    .image {
        margin-right: 20px;
        margin-left: 20px;
        position: relative;
        overflow: hidden;
    }

    .add-cart {
        position: absolute;
        width: 100%;
        background-color:floralwhite;
        transition: all 0.3s ease-in-out;
        opacity: 0;
        cursor: pointer;
        text-align: center;
    }

    .image:hover .cart1, .image:hover .cart2, .image:hover .cart3, .image:hover .cart4 {
        bottom: 50px;
        opacity: 1;
        padding: 10px;
        text-decoration: none;
    }

    footer {
        overflow: hidden;
        background-color: #222222;
        color: white;
        display: flex;
        justify-content: space-between;
        width: 100%;
        position: absolute;
    }

        footer a {
            color: white;
            margin: 2%
        }

    .box1 {
        flex: 3;
        padding: 30px;
    }

    .box2 {
        flex: 1;
        text-align: center;
        margin-top: 40px;
    }

    .background {
        color: #000000;
        font-family: 'Haettenschweiler';
        background-position: center;
        /* background-image: url(/Logo/leave.jpg);*/
        /*background-image: url(/Logo/leave.jpg);
        background-size: cover;*/
    }

    

    .menuAlign {
        text-align: center;
        color: #000000;
        font-family: 'Haettenschweiler';
        padding: 50px;
    }



    /*cart page*/

    /*.product-container {
        max-width: 650px;
        justify-content: space-around;
        margin: 0 auto;
        margin-top: 50px;
      
    }*/ 

    .cart-page{
        margin:80px auto;
      
    }
    table{
        width:100%;
        border-collapse:collapse;
    }
    .cart-info{
        display:flex;
        flex-wrap:wrap;
    }
    th{
        text-align:left;
        padding:5px;
        color:#fff;
        background:#ff523b;
        font-weight:normal;
    }
    td{
        padding:10px 5px;
    }
    td input{
        width:40px;
        height:30px;
        padding:5px;
    }
    td a {
            color: #ff523b;
            font-size:12px;
        }
    td img{
        width:80px;
        height:80px;
        margin-right:10px;
    }
    
    .total-price{
        display:flex;
        justify-content:flex-end;
    }

    .total-price table{
        border-top:3px solid #ff523b;
        width:100%;
        max-width:400px;
    }
   td:last-child{
        text-align:right;
    }
    th:last-child {
        text-align: right;
    }


    </style>
</head>
<body>
    <div class="topnav">
        <div class="logo">
            <img src="~/Logo/With Slogan 2/mesah_delicacies_logo-12.png" alt="logo" />
        </div>

        <ul>
            
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("manager"))
                {
                    <partial name="_LayoutMember" />
                }
            }
            else
            {
                <partial name="_LayoutGuest" />
            }

            
        </ul>

    </div>

    <div class="row">
        <div class="col-12">
            @RenderBody()

        </div>

    </div>

    <footer>

        <div class="box1">
            <img src="~/footer_logo/gmail.png" />&nbsp &nbsp mesahdelicacies@gmail.com <br />
            <br />
            <img src="~/footer_logo/whatsapp.png" />&nbsp &nbsp +65 9697 6961 <br />
            <br />
            <img src="~/footer_logo/pin.png" /><a href="https://goo.gl/maps/WFLLFoErqyzPMyrq9"> 930 YISHUN AVENUE 2, #B1-13, NORTHPOINT SHOPPING CENTRE, S(769098)</a>
        </div>
        <div class="box2">
            <a href="https://www.facebook.com/MesahwithDelicacies/"><img src="~/footer_logo/facebook.png"></a>

            <a href="https://www.instagram.com/mesahdelicacies/"><img src="~/footer_logo/instagram.png" /></a>
        </div>

    </footer>

</body>
</html>
