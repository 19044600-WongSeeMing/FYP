@model Product

<head>
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>

    <title>Add Products</title>
</head>
<body>
    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-8">
                <div class="alert alert-@ViewData["MsgType"]">
                    @Html.Raw(ViewData["Message"])
                </div>
            </div>
        </div>
    }
    <h2 style="margin: 45px; font-family:Inter;">Add Product</h2>
    <form asp-controller="Admin" asp-action="AddProducts" method="post">

        <div class="form-group">
            <label class="'control-label col-sm-5" asp-for="ProductName"><b>Product Name</b></label>
            <div class="col-sm-4">
                <input class="form-control" asp-for="ProductName" />
            </div>

            <div class="col-sm-12">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="'control-label col-sm-5" asp-for="Price"><b>Product Price</b></label>
            <div class="col-sm-4">
                <input class="form-control" asp-for="Price" />
            </div>

            <div class="col-sm-12">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="'control-label col-sm-5" asp-for="Photo"><b>Product Picture</b></label>
            <div class="col-sm-4">
                <input type="file" asp-for="Photo" class="form-control-file" />
            </div>

            <div class="col-sm-12">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <button type="submit">Save</button>
        </div>

    </form>

</body>
