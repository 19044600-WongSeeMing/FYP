@model MesahUser
<!DOCTYPE html>
<html>
<head>
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    <script>
    </script>
    @section ScriptSection{

    }
    <style>


        * {
            margin: 0;
            padding: 0;
        }

        body {
            background: #e9eaea;
            user-select: none;
            background-image: url(/Logo/leave.jpg);
            background-size: cover;
            background-position: center;
            width: 100%;
        }

        .container {
            width: 450px;
            margin: 30px auto;
            font-size: 15px;
            font-family: 'Inter';
        }

        form {
            padding: 70px;
        }

        .signup {
            width: 100%;
            background: #2F5427;
            background: -moz-linear-gradient(left, #2F5427 0%, #4AB848 25%, #C3FF96 100%);
            background: -webkit-linear-gradient(left, #2F5427 0%, #4AB848 25%, #C3FF96 100%);
            background: linear-gradient(to right, #2F5427 0%, #4AB848 25%, #C3FF96 100%);
            float: left;
            height: 60px;
            line-height: 60px;
            text-align: center;
            cursor: pointer;
            text-transform: uppercase;
            font-family: 'Inter';
            font-size: 22px;
            color: #000000;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .signup-form {
            background: #fff;
            padding: 40px;
            clear: both;
            width: 100%;
            box-sizing: border-box;
            height: 100%;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }



        .input {
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
            margin-bottom: 25px;
            border: 2px solid #e9eaea;
            color: #3e3e40;
            font-size: 14px;
            outline: none;
            border-bottom-left-radius: 20px
        }

            .input:focus {
                border: 2px solid #34b3a0;
            }

        button {
            background: #FF9E18;
            background: -moz-linear-gradient(left, #FF9E18 0%, #F0C415 43%, #F1EB22 100%);
            background: -webkit-linear-gradient(left, #FF9E18 0%, #F0C415 43%, #F1EB22 100%);
            background: linear-gradient(to right, #FF9E18 0%, #F0C415 43%, #F1EB22 100%);
            width: 100%;
            height: 60px;
            margin: auto;
            font-size: 18px;
            text-transform: uppercase;
            background-color: #70db70;
            color: #FFFFFF;
            font-weight: bold;
            letter-spacing: 1px;
            cursor: pointer;
            text-align: center;
            border: none;
            margin-bottom: 15px;
            border-radius: 30px;
        }

            button:hover {
                color: #4AB848;
                list-style-type: none;
                text-decoration: none;
            }

        span a {
            text-decoration: none;
            color: #000;
        }

        ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
            color: lightgrey;
            font-family: Inter;
        }

        ::-moz-placeholder { /* Firefox 19+ */
            color: lightgrey;
            font-family: Inter;
        }

        :-ms-input-placeholder { /* IE 10+ */
            color: lightgrey;
            font-family: Inter;
        }

        :-moz-placeholder { /* Firefox 18- */
            color: lightgrey;
            font-family: Inter;
        }
    </style>

    <title>SignUp Page</title>
</head>

<body>
    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-8">
                <div class="alert alert-@ViewData["MsgType"]">
                    @Html.Raw(ViewData["Message"])
                </div>
            </div>
        </div>
    }
    <form asp-controller="Account" asp-action="SignUp" method="post">
        <div class="wrapper">
            <div class="container">


                <div class="signup"><b>Sign Up</b></div>

                <div class="signup-form">
                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="UserId"><b>Username</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="UserId" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="UserPw"><b>Password</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="UserPw" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="UserPw" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="FullName"><b>Name</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="FullName" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="Email"><b>Email</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="Email" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="Address"><b>House Address</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="Address" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="PostalCode"><b>Postal Code</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="PostalCode" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>

                    <br>

                    <div class="form-group">
                        <label class="'control-label col-sm-5" asp-for="Phone"><b>Phone Number</b></label>
                        <div class="col-sm-12">
                            <input class="form-control" asp-for="Phone" />
                        </div>

                    </div>

                    <div class="col-sm-12">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <br>
                    <button type="submit">Create Account</button>
                </div>

            </div>

        </div>

    </form>

</body>
</html>
